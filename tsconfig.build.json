{
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "esnext",
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": false,
    "declarationDir": "lib",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      //      "element-plus/global",
      //      "axios"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
